{% extends "MadalynnMainBundle:Admin:layout.html.twig" %}

{% block pageheader %}
    <div class="right">
        <form action="{{ path('admin_article_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
             <a class="btn" href="{{ path('admin_article') }}">Retour</a>
             &nbsp;
             <a class="btn primary" href="{{ path('admin_article_edit', { 'id': entity.id }) }}">Modifier</a>
             <input class="btn danger" type="submit" value="Supprimer" />
        </form>
    </div>
    <h1>Article</h1>
{% endblock %}

{% block content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Visible</th>
            <td>{{ entity.visible }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ entity.content }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}